<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="pref_remember_percent"
        android:title="Check box preference" />
    <ListPreference
        android:defaultValue="1"
        android:entries="@array/rounding_keys"
        android:entryValues="@array/rounding_values"
        android:key="pref_rounding"
        android:title="List preference" />
    <EditTextPreference
        android:defaultValue="Default value"
        android:key="edit_text_preference_1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="@string/pref_set_user_name_summary"
        android:title="@string/pref_set_user_name" />
</PreferenceScreen>